{
  "name": "@notto/extension",
  "version": "2.2.0",
  "private": true,
  "description": "Notto Chrome extension for screenshot annotation",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "node esbuild.config.js",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/overlay.css --minify",
    "dev": "concurrently \"npm run dev:js\" \"npm run dev:css\"",
    "dev:js": "node esbuild.config.js --watch",
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./dist/overlay.css --watch",
    "typecheck": "tsc --noEmit",
    "package": "node scripts/package.js"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.33",
    "concurrently": "^8.2.2",
    "esbuild": "^0.27.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@notto/shared": "workspace:*"
  }
}
