{
  "manifest_version": 3,
  "name": "Notto - Screenshot Annotator",
  "version": "2.2.0",
  "description": "Capture screenshots and annotate with arrows, boxes, and text in full-screen mode",
  "permissions": ["activeTab", "downloads", "scripting", "storage", "tabs"],
  "host_permissions": ["https://notto-api.vercel.app/*"],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
