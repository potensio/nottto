{
  "manifest_version": 3,
  "name": "Nottto - Screenshot Annotator",
  "version": "2.1.0",
  "description": "Capture screenshots and annotate with arrows, boxes, and text in full-screen mode",
  "permissions": ["activeTab", "downloads", "scripting", "storage"],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "https://nottto.com/*",
        "https://www.nottto.com/*",
        "https://app.nottto.com/*"
      ],
      "js": ["dist/auth-listener.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
