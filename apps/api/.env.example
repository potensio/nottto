# Database
DATABASE_URL=postgresql://user:password@host/database

# Auth
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars

# Vercel Blob
BLOB_READ_WRITE_TOKEN=vercel_blob_xxx

# Brevo (Email)
# Set to "development" to log magic links to console instead of sending emails
# Set to "production" when you have a verified domain in Brevo
EMAIL_MODE=development
BREVO_API_KEY=your_brevo_api_key
EMAIL_FROM=Notto <noreply@yourdomain.com>

# App URLs
# For local development:
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000

# For production (set these in Vercel environment variables):
# API_URL=https://notto-api.vercel.app
# WEB_URL=https://notto-web.vercel.app

# Server
PORT=3001
