{
  "name": "@bugfinder/shared",
  "version": "1.0.0",
  "private": true,
  "description": "Shared types, schemas, and database definitions for BugFinder",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./db": {
      "types": "./src/db/index.ts",
      "import": "./src/db/index.ts"
    },
    "./schemas": {
      "types": "./src/schemas/index.ts",
      "import": "./src/schemas/index.ts"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "import": "./src/types/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-orm": "^0.38.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
