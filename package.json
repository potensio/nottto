{
  "name": "bugfinder",
  "version": "2.1.0",
  "private": true,
  "description": "BugFinder - Screenshot annotation tool with Chrome extension and API",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:extension": "pnpm --filter @bugfinder/extension dev",
    "dev:api": "pnpm --filter @bugfinder/api dev",
    "build:extension": "pnpm --filter @bugfinder/extension build",
    "build:api": "pnpm --filter @bugfinder/api build",
    "typecheck": "pnpm -r typecheck",
    "db:generate": "pnpm --filter @bugfinder/api db:generate",
    "db:migrate": "pnpm --filter @bugfinder/api db:migrate"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0"
}
